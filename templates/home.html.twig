<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/21b1a1b060.js" crossorigin="anonymous"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <title>Todo Project</title>
  </head>
  <body>
    <div class="header">
        <h2 class="text-center text-danger">TO DO PROJECT</h2>
    </div>
    <div class="body container">
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">ID</th>
                <th scope="col"><i class="fa-solid fa-spell-check"></i>Name</th>
                <th scope="col"><i class="fa-solid fa-file-waveform"></i>Description</th>
                <th scope="col"><i class="fa-light fa-circle-dot"></i>Status</th>
                <th scope="col"><i class="fa-regular fa-calendar-check"></i>Create Date</th>
                <th scope="col"><i class="fa-solid fa-gears"></i>Action</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              {% for list in list %}
                <tr>
                  <td><input type="checkbox"></td>
                  <th scope="row">{{list.id}} </th>
                  {% if list.status == 1 %}
                    <td style="text-decoration: line-through;"> {{list.name}} </td>
                  {% endif %}
                  {% if list.status == 0 %}
                    <td> {{list.name}} </td>
                  {% endif %}
                  <td>{{list.description}} </td>
                  <td>{{list.status ? 'Yes': 'No'}}</td>
                  <td>{{list.createdate}} </td>
                  {% if list.status == 0 %}
                    <td><a class="btn btn-success" href="/list/edit/{{list.id}}">Do it</a></td>
                  {% endif %}
                  {% if list.status == 1 %}
                    <td><a class="btn btn-warning" href="/list/undo/{{list.id}}">Undo it</a></td>
                  {% endif %}
                  <td><a class="btn btn-danger" href="/list/delete/{{list.id}}"> <i class="fa-solid fa-trash"></i></a></td>
                </tr>
                {% endfor %}
                
            </tbody>
          </table>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>