{% extends 'base2.html.twig' %}

{% block title %}Update{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"></div>
    <div class="card-body">
        <div class="card-title">
            <h3 class="text-center title-2">Update Todo</h3>
        </div>
        <hr>
        <form action="/list/submit/{{item.id}}" method="POST">
            <div class="form-group">
                <label for="id_update" class="control-label mb-1 font-weight-bold">ID:</label>
                <input id="id_update" name="id_update" type="text" class="form-control" aria-required="true"
                    value="{{item.id}}" disabled>
            </div>
            <div class="form-group has-success">
                <label for="cc-name" class="control-label mb-1 font-weight-bold">Name:</label>
                <input type="text" class="form-control" value="{{item.name}}" placeholder="Enter Name" id="name_update"
                    name="name_update" required>
            </div>
            <div class="form-group">
                <label for="des_update" class="control-label mb-1 font-weight-bold">Description:</label>
                <input type="text" class="form-control" value="{{item.description}}" placeholder="Enter Description"
                    id="des_update" name="des_update" required>
            </div>
            <div class="form-check-inline">
                <label class="font-weight-bold">Status:</label>
            </div>
            <div class="form-check-inline">
                <label class="form-check-label">
                    {% if item.status == 1 %}
                    <input type="checkbox" class="form-check-input" name="status_update" id="status_update" checked>
                    Completed
                    {% endif %}
                    {% if item.status != 1 %}
                    <input type="checkbox" class="form-check-input" name="status_update" id="status_update"> Completed
                    {% endif %}
                </label>
            </div>
            <div>
                <button id="submit-button" type="submit" class="btn btn-lg btn-info m-auto">
                    <i class="fa-solid fa-check"></i>&nbsp;
                    <span id="">Submit</span>
                </button>
                 <a class="btn btn-lg btn-danger m-auto" href="/home">
                    <i class="fa-solid fa-x"></i>&nbsp;
                    <span id="">Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

{% endblock %}